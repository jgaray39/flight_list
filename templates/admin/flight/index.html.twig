{% extends 'admin/admin_base.html.twig' %}

{% block title %}Liste des vols - vue admin{% endblock %}

{% block body %}
    <h1>Flight index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>DateStart</th>
                <th>DateEnd</th>
                <th>Price</th>
                <th>Reduction</th>
                <th>Places</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {{ app.user }}
        {% for flight in flights %}
            <tr>
                <td>{{ flight.id }}</td>
                <td>{{ flight.number }}</td>
                <td>{{ flight.dateStart ? flight.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ flight.dateEnd ? flight.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ flight.price }}</td>
                <td>{{ flight.reduction ? 'Yes' : 'No' }}</td>
                <td>{{ flight.places }}</td>
                <td>
                    <a href="{{ path('admin_app_flight_show', {'id': flight.id}) }}">show</a>
                    <a href="{{ path('admin_app_flight_edit', {'id': flight.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_app_flight_new') }}">Create new</a>
{% endblock %}
