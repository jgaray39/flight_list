{% extends 'admin/admin_base.html.twig' %}

{% block title %}Flight{% endblock %}

{% block body %}
    <h1>Flight</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flight.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ flight.number }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ flight.dateStart ? flight.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ flight.dateEnd ? flight.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ flight.price }}</td>
            </tr>
            <tr>
                <th>Reduction</th>
                <td>{{ flight.reduction ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ flight.places }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_app_flight_index') }}">back to list</a>

    <a href="{{ path('admin_app_flight_edit', {'id': flight.id}) }}">edit</a>

    {{ include('admin/flight/_delete_form.html.twig') }}
{% endblock %}
